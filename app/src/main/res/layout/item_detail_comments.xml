<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.bz.view.CircleImageView
        android:id="@+id/id_comment_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/comment_img"/>

    <TextView
        android:id="@+id/id_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/id_comment_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/id_comment_img"
        android:text="我cao尼玛币"
        android:textColor="#0d0d0d"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/id_comment_content"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_comment_name"
        android:layout_marginTop="10dp"
        android:layout_below="@id/id_comment_name"
        android:text="我cao尼玛币"
        android:textColor="#575757"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/id_comment_time"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_comment_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/id_comment_content"
        android:text="2015-11-18 11:04:51"
        android:textColor="#949494"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/id_comment_reply"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:drawableLeft="@mipmap/btn_article_reply_nor"
        android:layout_height="wrap_content"
        android:text="回复"
        android:drawablePadding="5dp"
        android:layout_toLeftOf="@+id/id_comment_like"
        android:layout_alignTop="@id/id_comment_time"
        android:layout_marginRight="10dp"
        android:textColor="#949494"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/id_comment_like"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:drawablePadding="5dp"
        android:layout_alignTop="@id/id_comment_time"
        android:drawableLeft="@mipmap/btn_article_like_nor"
        android:layout_height="wrap_content"
        android:text="103"
        android:layout_marginRight="20dp"
        android:textColor="#949494"
        android:textSize="13sp"/>

    <View
        android:layout_width="match_parent"
        android:background="#c9c9c9"
        android:layout_alignLeft="@id/id_comment_time"
        android:layout_below="@id/id_comment_time"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"/>


</RelativeLayout>