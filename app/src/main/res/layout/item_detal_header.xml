<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/id_detail_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/detail"/>

    <TextView
        android:id="@+id/id_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_detail_img"
        android:layout_marginBottom="10dp"
        android:lines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="俄罗斯坠毁客机竟也是恐袭，惹怒普京大帝后果不堪设想！"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

    <com.bz.view.CircleImageView
        android:id="@+id/id_detail_author_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/id_detail_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/detail_header"/>

    <TextView
        android:id="@+id/id_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@id/id_detail_author_avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/id_detail_author_avatar"
        android:text="零小歇"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/id_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/id_detail_name"
        android:layout_below="@id/id_detail_name"
        android:text="零小歇"
        android:textSize="13sp"/>

    <WebView
        android:id="@+id/id_detail_web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_detail_time"
        android:layout_marginTop="10dp"/>


    <com.bz.view.Waitting
        android:id="@+id/id_relative_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>


</RelativeLayout>