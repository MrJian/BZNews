<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="90dp">

    <ImageView
        android:id="@+id/id_thumbnail_programa"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/programa"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/id_name"
        android:singleLine="true"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="暴走动漫资讯"
        android:layout_toRightOf="@id/id_thumbnail_programa"
        android:layout_alignTop="@id/id_thumbnail_programa"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/id_description"
        android:layout_alignLeft="@id/id_name"
        android:text="网罗天下各种动漫资讯，漫迷必关注栏目"
        android:textSize="13sp"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>