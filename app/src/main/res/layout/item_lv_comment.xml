<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="80dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/id_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/header"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/id_title"
        android:lines="2"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="这一次，为《007：幽灵党》正名！"
        android:layout_toRightOf="@id/id_thumbnail"
        android:layout_alignTop="@id/id_thumbnail"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/section_count"
        android:layout_alignLeft="@id/id_title"
        android:text="尼玛看电影 | 人气9千"
        android:textSize="13sp"
        android:layout_below="@id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>