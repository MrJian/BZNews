<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/background">

    <ImageButton
        android:id="@+id/id_home_menu"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/home_menu_selector"
        android:src="@mipmap/btn_home_menu_nor"/>

    <TextView
        android:id="@+id/title_bar_msg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/id_home_menu"
        android:gravity="center"
        android:text="@string/bar_msg"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <ImageButton
        android:id="@+id/id_home_more"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@mipmap/btn_home_more"/>

    <ImageButton
        android:id="@+id/id_home_notice"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/id_home_more"
        android:background="@android:color/transparent"
        android:src="@mipmap/btn_home_notice_nor"/>

</RelativeLayout>